{% extends "_layouts/base.njk" %}

{% set title = 'Materi' %}
{% set is_courses = true %}

{% block content %}
    <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
        <div class="py-8">
            <h2 class="text-2xl font-semibold text-gray-800">Full-Stack Laravel React Native: FoodMarket Apps</h2>
            <span class="text-gray-600">Lorem ipsum dolor sit amet</span>
        </div>
        <div class="mb-8">
            <div class="grid grid-cols-3 gap-4">
                <div class="mb-4">
                    <div class="shadow rounded-lg bg-white">
                        <div class="py-4 px-5">
                            {% for item in data_contents %}
                                <div class="border-b border-gray-100 mb-3 pb-3 last:border-b-0 last:mb-0 last:pb-0">
                                    <div class="flex items-center">
                                        <div class="flex-grow">
                                            <a href="" class="text-gray-800 hover:text-blue-600 block">
                                                <h4 class="font-medium">{{ item['title'] }}</h4>
                                            </a>
                                        </div>
                                        <div class="text-gray-300">
                                            {% if item['list'] %}
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7"/>
                                                </svg>
                                            {% else %}
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
                                                </svg>
                                            {% endif %}
                                        </div>
                                    </div>
                                    {% if item['list'] %}
                                        <div class="py-3 space-y-2">
                                            {% for content in item['list'] %}
                                                <div class="flex items-center">
                                                    <div class="h-8 w-8 bg-blue-50 mr-4 rounded-full flex items-center justify-center text-blue-600">
                                                        {% if content['type'] == 'video' %}
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                                                                <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                            </svg>
                                                        {% elif content['type'] == 'text' %}
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                                            </svg>
                                                        {% elif content['type'] == 'quiz' %}
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                                <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                                            </svg>
                                                        {% elif content['type'] == 'challenge' %}
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                                <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
                                                            </svg>
                                                        {% else %}
                                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                                            </svg>
                                                        {% endif %}
                                                    </div>
                                                    <h5 class="flex-grow">
                                                        <a href="" class="block hover:text-blue-600">{{ content['title'] }}</a>
                                                    </h5>
                                                    <span class="text-sm text-gray-400">{{ content['duration'] }}</span>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="mb-4 col-span-2 space-y-4">
                    <div class="shadow rounded-lg bg-white">
                        <div class="py-4 px-5">
                            <div class="flex items-center">
                                <div class="flex-grow flex items-center mb-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                    <h3 class="text-xl font-medium">Title Quiz</h3>
                                </div>
                            </div>
                            <div class="w-4/5">
                                <dl>
                                    <div class="py-1 grid grid-cols-3 gap-4">
                                        <dt class="text-sm font-medium text-gray-500">Pengerjaan</dt>
                                        <dd class="mt-1 text-sm text-gray-900 col-span-2">7 Januari 2022 <small class="text-xs text-gray-600">(20:21:09)</small></dd>
                                    </div>
                                    <div class="py-1 grid grid-cols-3 gap-4">
                                        <dt class="text-sm font-medium text-gray-500">Nilai</dt>
                                        <dd class="mt-1 text-sm text-gray-900 col-span-2">
                                            <span>80</span>
                                            <span class="bg-green-100 text-green-600 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded-full">Pass</span>
                                        </dd>
                                    </div>
                                    <div class="py-1 grid grid-cols-3 gap-4">
                                        <dt class="text-sm font-medium text-gray-500">Detail Nilai</dt>
                                        <dd class="mt-1 text-sm text-gray-900 col-span-2">
                                            <ul class="list-disc list-inside">
                                                <li>4 Benar</li>
                                                <li>1 Salah</li>
                                            </ul>
                                        </dd>
                                    </div>
                                </dl>
                            </div>
                        </div>
                        <div class="py-4 px-5 bg-blue-50 text-right">
                            <a href="" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md cursor-pointer text-white bg-blue-600 hover:bg-blue-700 hover:border-blue-700 hover:text-white">Materi Selanjutnya</a>
                        </div>
                    </div>

                    <div class="shadow rounded-lg bg-white">
                        <div class="py-4 px-5">
                            <div class="flex items-center mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
                                </svg>
                                <h3 class="text-lg font-medium">Detail Pengerjaan</h3>
                            </div>
                            <div class="">
                                {% for no in range(1, 5 + 1) %}
                                    <div class="flex ">
                                        <div class="mr-3">
                                            <div class="w-6 h-6 rounded-full bg-blue-50 flex items-center justify-center">
                                                <span class="text-sm">{{ no }}.</span>
                                            </div>
                                        </div>
                                        <div class="mb-4">
                                            <div class="mb-3">
                                                <p>
                                                    If you’re learning to program for the first time, or if you’re coming from a different language, this course, JavaScript: Getting Started, will give you the basics for coding in JavaScript.
                                                </p>
                                            </div>
                                            {% if no == 1 %}
                                                <div class="space-y-2">
                                                    <div class="flex">
                                                        <div class="mr-3">
                                                            <div class="w-6 h-6 rounded-full bg-red-50 flex items-center justify-center">
                                                                <span class="text-sm">B.</span>
                                                            </div>
                                                        </div>
                                                        <div class="">
                                                            <div class="">
                                                                <p>
                                                                    If you’re learning to program for the first time, or if you’re coming from a different language, this course, JavaScript: Getting Started, will give you the basics for coding in JavaScript.
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="flex">
                                                        <div class="mr-3">
                                                            <div class="w-6 h-6 rounded-full bg-green-50 flex items-center justify-center">
                                                                <span class="text-sm">A.</span>
                                                            </div>
                                                        </div>
                                                        <div class="">
                                                            <div class="">
                                                                <p>
                                                                    If you’re learning to program for the first time, or if you’re coming from a different language, this course, JavaScript: Getting Started, will give you the basics for coding in JavaScript.
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div>
                                            {% if no == 1 %}
                                                <span class="bg-red-100 text-red-600 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded-full">Salah</span>
                                            {% else %}
                                                <span class="bg-green-100 text-green-600 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded-full">benar</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
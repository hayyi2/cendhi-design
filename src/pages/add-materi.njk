{% extends "_layouts/admin.njk" %}

{% set title = 'Dashbaord' %}

{% block content %}
    <h2 class="text-2xl font-medium mb-4">Manage Courses</h2>
    <div class="bg-white rounded-lg shadow overflow-hidden mb-3">
        <div class="p-4">
            <h4 class="font-medium text-xl mb-4">Create Materi</h4>
            <div class="space-y-4">
                <div class="grid grid-cols-12">
                    <div class="col-span-3 py-1.5">
                        <label for="" class="font-medium text-sm">Group</label>
                    </div>
                    <div class="col-span-6">
                        <select name="" id="" class="focus:ring-blue-500 focus:border-blue-500 flex-1 block w-full rounded-md sm:text-sm border-gray-300">
                            <option value="">Sample</option>
                        </select>
                    </div>
                </div>
                <div class="grid grid-cols-12">
                    <div class="col-span-3 py-1.5">
                        <label for="" class="font-medium text-sm">Title</label>
                    </div>
                    <div class="col-span-6">
                        <input type="text" class="focus:ring-blue-500 focus:border-blue-500 flex-1 block w-full rounded-md sm:text-sm border-gray-300">
                    </div>
                </div>
                <div class="grid grid-cols-12">
                    <div class="col-span-3">
                        <label for="" class="font-medium text-sm">Description</label>
                    </div>
                    <div class="col-span-9">
                        <textarea name="" id="" class="focus:ring-blue-500 focus:border-blue-500 flex-1 block w-full rounded-md sm:text-sm border-gray-300">tinymce</textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="py-4 px-5 bg-blue-50 text-right">
            <a href="" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md cursor-pointer text-white bg-blue-600 hover:bg-blue-700 hover:border-blue-700 hover:text-white">Create Materi</a>
        </div>
    </div>
{% endblock %}
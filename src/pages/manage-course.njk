{% extends "_layouts/admin.njk" %}

{% set title = 'Dashbaord' %}

{% block content %}
    <h2 class="text-2xl font-medium mb-4">Manage Courses</h2>
    <div class="flex justify-between mb-3">
        <div class="flex gap-2">
            <a href="" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md cursor-pointer text-white bg-gray-600 hover:bg-gray-700 hover:border-gray-700 hover:text-white">
                <span>Filter</span>
            </a>
            <input type="text" 
                class="focus:ring-blue-500 focus:border-blue-500 flex-1 block w-full rounded-md sm:text-sm border-gray-300 placeholder:text-gray-300" 
                placeholder="Search Courses">
        </div>
        <div>
            <a href="" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md cursor-pointer text-white bg-blue-600 hover:bg-blue-700 hover:border-blue-700 hover:text-white">Create Course</a>
        </div>
    </div>
    <div class="bg-white rounded-lg shadow overflow-hidden mb-3">
        <table class="min-w-full">
            <thead class="bg-gray-50 dark:bg-gray-700">
                <tr>
                    <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                        <span>Courses</span>
                    </th>
                    <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                        <span>Author</span>
                    </th>
                    <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                        <span>Member</span>
                    </th>
                    <th scope="col" class="relative py-3 px-6">
                        <span class="sr-only">Edit</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for item in data_courses.slice(0, 5) %}
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                        <td class="py-4 px-6 text-sm text-gray-500 whitespace-nowrap dark:text-gray-400">
                            <div class="flex">
                                <img 
                                    class="h-12 rounded-lg mr-3"
                                    src="{{ item['thumb'] }}" alt="">
                                <div>
                                    <div class="mb-1">
                                        <span class="font-medium">{{ item['title'] }}</span>
                                    </div>
                                    <span class="text-xs">
                                        5 Video &middot; 5 Article  &middot; 5 Quizzes  &middot; 5 Challenges  
                                    </span>
                                </div>
                            </div>
                        </td>
                        <td class="py-4 px-6 text-sm text-gray-500 whitespace-nowrap dark:text-gray-400">
                            <div class="flex items-center">
                                <img 
                                    class="h-12 rounded-full mr-3"
                                    src="{{ asset_url }}user1.PNG" alt="">
                                <div class="leading-tight">
                                    <div class="mb-1">
                                        <span class="font-medium">Keroro Gunsou</span>
                                    </div>
                                    <span class="text-xs">@keroro</span>
                                </div>
                            </div>
                        </td>
                        <td class="py-4 px-6 text-sm text-gray-500 whitespace-nowrap dark:text-gray-400">
                            <span>80 Member</span>
                        </td>
                        <td class="py-4 px-6 text-sm font-medium text-right whitespace-nowrap">
                            <div class="flex gap-2">
                                <a href="{{ base_url }}pages/quiz-result.html" class="text-blue-600 dark:text-blue-500 hover:underline">Detail</a>
                                <a href="{{ base_url }}pages/quiz-result.html" class="text-blue-600 dark:text-blue-500 hover:underline">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"/>
                                    </svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="flex items-center justify-between">
        <div>
            <span class="text-gray-600">Show 5 of 20 Courses</span>
        </div>
        <div>
            <a href="" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md cursor-pointer text-white bg-gray-600 hover:bg-gray-700 hover:border-gray-700 hover:text-white">
                <span>Previous</span>
            </a>
            <a href="" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md cursor-pointer text-white bg-gray-600 hover:bg-gray-700 hover:border-gray-700 hover:text-white">
                <span>Next</span>
            </a>
        </div>
    </div>
{% endblock %}